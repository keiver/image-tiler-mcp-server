{
  "name": "large-image-tiler-mcp-server",
  "version": "1.1.2",
  "description": "MCP server that splits large images into optimally-sized tiles for LLM vision (Claude, OpenAI, Gemini, Gemini 3)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "image-tiler-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "image-tiler",
    "claude",
    "llm",
    "vision",
    "screenshot",
    "sharp",
    "image-processing",
    "tiling"
  ],
  "author": "Keiver Hernandez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keiver/large-image-tiler-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/keiver/large-image-tiler-mcp-server/issues"
  },
  "homepage": "https://github.com/keiver/large-image-tiler-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "sharp": "^0.33.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}